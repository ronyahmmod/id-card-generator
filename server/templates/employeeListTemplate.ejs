<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <style>
      body {
        font-family: "Segoe UI", sans-serif;
        margin: 40px;
        font-size: 14px;
      }
      .header {
        text-align: center;
        margin-bottom: 20px;
      }
      .header h1 {
        margin: 0;
        font-size: 20px;
      }
      .header p {
        margin: 2px 0;
        font-size: 12px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
      }
      th,
      td {
        border: 1px solid #999;
        padding: 8px;
        text-align: left;
      }
      th {
        background-color: #f0f0f0;
      }
      .signature-cell {
        height: 40px;
      }
      .footer {
        margin-top: 40px;
        text-align: right;
        font-size: 12px;
      }
    </style>
  </head>
  <body>
    <div class="header">
      <h1><%= title %></h1>
      <p><%= subTitle || 'College Name, Address' %></p>
    </div>

    <table border="1" cellspacing="0" cellpadding="5">
      <thead>
        <tr>
          <% selectedFields.forEach(f => { %>
          <th><%= f.toUpperCase() %></th>
          <% }); %>
        </tr>
      </thead>
      <tbody>
        <% employees.forEach((emp, index) => { %>
        <tr>
          <% selectedFields.forEach(field => { %>
          <td>
            <% if (field === 'sl') { %> <%= index + 1 %> <% } else if (field ===
            'signature') { %> ___________________ <% } else { %> <%= emp[field]
            || '' %> <% } %>
          </td>
          <% }); %>
        </tr>
        <% }); %>
      </tbody>
    </table>

    <div class="footer">
      <p>Printed on: <%= new Date().toLocaleDateString() %></p>
    </div>
  </body>
</html>
